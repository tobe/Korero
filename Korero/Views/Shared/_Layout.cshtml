<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Korero</title>

    <!-- No need for Prod/Dev since Webpack does this for us -->
    <link rel="stylesheet" href="~/dist/vendor.bundle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/app.bundle.css" asp-append-version="true" />
</head>
<body>

    <!-- Bootstrap navigation -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-success">
        <a class="navbar-brand" href="#">Korero</a>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>