<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Korero</title>

    <!-- No need for Prod/Dev since Webpack does this for us -->
    <link rel="stylesheet" href="~/dist/vendor.bundle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/app.bundle.css" asp-append-version="true" />

    <base href="/" />
</head>
<body>

    <!-- Bootstrap navigation -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-success">
        <a class="navbar-brand" href="#">Korero</a>
    </nav>

    <!-- Fluid container to span across the entire screen width -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Google's Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</body>
</html>