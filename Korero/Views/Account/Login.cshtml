@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="login">
    <form class="form-signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <h3 class="form-signin-heading">Sign into Korero</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label name="Username" asp-for="Username">Username</label>
            <input name="Username" asp-for="Username" type="text" class="form-control" aria-describedby="emailHelp" placeholder="john.smith@example.org">
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            <span asp-validation-for="Username" class="form-text text-danger" role="alert"></span>
        </div>
        <div class="form-group">
            <label name="Password" asp-for="Password">Password</label>
            <input name="Password" asp-for="Password" type="password" class="form-control" placeholder="Enter your password here">
            <span asp-validation-for="Password" class="form-text text-danger" role="alert"></span>
        </div>
        <div class="form-check">
            <label asp-for="RememberMe" class="custom-control custom-checkbox">
                <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(m => m.RememberMe)</span>
            </label>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col"><button type="submit" class="btn btn-primary">Sign In</button></div>
                <div class="ml-auto"><button type="button" onclick="location.href='@Url.Action("Register", "Account")'" class="btn btn-info">Register as a new user</button></div>
            </div>
        </div>
    </form>
</div>